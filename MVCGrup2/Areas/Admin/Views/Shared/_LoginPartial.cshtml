@using Microsoft.AspNetCore.Identity
@using MVCGrup2.Data

@inject SignInManager<MVCGrup2User> SignInManager
@inject UserManager<MVCGrup2User> UserManager
@inject MVCGrup2Context db;
@{
    MVCGrup2User? user = await UserManager.GetUserAsync(User);
}

<link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
<link rel="preconnect" href="https://fonts.googleapis.com">
<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
<link href="https://fonts.googleapis.com/css2?family=Montserrat:ital,wght@0,100..900;1,100..900&display=swap" rel="stylesheet">

<ul class="navbar-nav">
@if (SignInManager.IsSignedIn(User))
{
    <li class="nav-item">
            <form id="logoutForm" class="btn-lg nav-link btn" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                <button id="logout" type="submit" class="btn-lg nav-link btn" style="color: moccasin">Logout</button>
            </form>

    </li>
}
else
{
    <li class="nav-item">
        <a class="nav-link text-dark" id="register" asp-area="Identity" asp-page="/Account/Register">Register</a>
    </li>
    <li class="nav-item">
        <a class="nav-link text-dark" id="login" asp-area="Identity" asp-page="/Account/Login">Login</a>
    </li>
}
</ul>
