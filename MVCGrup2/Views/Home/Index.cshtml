<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>




<div class="container-fluid">
    <img src="~/Pictures/giris.jpg" class="w-100 rounded-3" alt="" />

    <h1 class="mt-3 mb-4 text-center" style="color:black ; Background:red;">Menülerimiz</h1>

    <div class="row">
        @foreach (var item in Model)
        {
            <div class="col-md-6 mb-2">
                <div class="card text-center d-flex align-items-center" style="color:darkred">
                    <h4 class="mt-2">@item.Name</h4>
                    <img src="~/Pictures/@item.mageName" class="img-fluid mx-auto" style="max-width:50%" alt="" />
                </div>
            </div>
        }
    </div>

    <a asp-area="Musteri"  asp-action="Index" asp-controller="Musteri" class="btn btn-warning d-block mt-4 fw-bold rounded-3" style="color:darkred; Background:yellow">Sipariş Verin</a>

</div>






